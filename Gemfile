source 'https://rubygems.org'

gem 'chef', '~> 17.10'                 # Chef gem version 17.10.x
gem 'knife-solo', '~> 0.7'             # Knife plugin for running Chef Solo
gem 'berkshelf', '~> 7.0'              # Dependency manager for Chef cookbooks
gem 'test-kitchen', '~> 3.0'           # Test Kitchen for testing cookbooks
gem 'kitchen-vagrant', '~> 1.10'       # Test Kitchen driver for Vagrant
gem 'kitchen-docker', '~> 2.10'        # Test Kitchen driver for Docker
gem 'rubocop', '~> 1.0'                # Ruby linter and formatter
gem 'chefspec', '~> 9.0'               # RSpec framework for testing Chef cookbooks
gem 'cookstyle', '~> 7.0'              # Chef-specific RuboCop configuration
gem 'inspec', '~> 4.0'                 # InSpec for infrastructure testing and compliance
